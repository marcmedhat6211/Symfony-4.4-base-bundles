{% extends 'base.html.twig' %}

{% block title %}Articles List{% endblock %}

{% block body %}
    <h1 class="text-center">Articles List</h1>
    <table class="table">
        <thead>
        <th>#</th>
        <th>Title</th>
        <th>Action</th>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>
                    <a href="#" class="btn btn-success btn-sm">Show</a>
                    <a href="#" class="btn btn-primary btn-sm">Edit</a>
                    <a href="#" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
